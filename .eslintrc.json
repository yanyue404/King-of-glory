{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "env": {
    "mocha": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "no-plusplus": "off",
    "no-unused-vars": "warn",
    "consistent-return": "warn",
    "array-callback-return": "warn",
    "no-param-reassign": "warn"
  }
}
